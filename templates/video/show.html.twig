{% extends 'base.html.twig' %}

{% block title %}Video{% endblock %}

{% block body %}
    <h1>Video</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video.id }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ video.Video }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ video.Title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ video.Description }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ video.Duration ? video.Duration|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Url</th>
                <td>{{ video.url }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ video.category }}</td>
            </tr>
            <tr>
                <th>Date_publication</th>
                <td>{{ video.datePublication ? video.datePublication|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Favorite</th>
                <td>{{ video.favorite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_video_index') }}">back to list</a>

    <a href="{{ path('app_video_edit', {'id': video.id}) }}">edit</a>

    {{ include('video/_delete_form.html.twig') }}
{% endblock %}
